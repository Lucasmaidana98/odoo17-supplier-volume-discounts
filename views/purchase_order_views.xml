<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Order form view extension -->
        <record id="purchase_order_form_supplier_volume_discount" model="ir.ui.view">
            <field name="name">purchase.order.form.supplier.volume.discount</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Add supplier discount information in header -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="supplier_volume_discount_percentage" readonly="1"/>
                    <field name="supplier_minimum_purchase_amount" readonly="1"/>
                    <field name="qualifies_for_discount" readonly="1"/>
                </xpath>
                
                <!-- Add discount summary in totals section -->
                <xpath expr="//field[@name='amount_untaxed']" position="after">
                    <field name="amount_without_discount" invisible="not qualifies_for_discount"/>
                    <field name="total_discount_amount" invisible="not qualifies_for_discount"/>
                    <field name="discount_percentage_savings" invisible="not qualifies_for_discount"/>
                </xpath>
            </field>
        </record>
        
        <!-- Purchase Order tree view extension -->
        <record id="purchase_order_tree_supplier_volume_discount" model="ir.ui.view">
            <field name="name">purchase.order.tree.supplier.volume.discount</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_untaxed']" position="after">
                    <field name="qualifies_for_discount" optional="hide"/>
                    <field name="total_discount_amount" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>