<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Order form view - order lines extension -->
        <record id="purchase_order_form_lines_supplier_volume_discount" model="ir.ui.view">
            <field name="name">purchase.order.form.lines.supplier.volume.discount</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Add category column after product -->
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                    <field name="product_category_name" optional="show"/>
                </xpath>
                <!-- Ensure discount column is visible -->
                <xpath expr="//field[@name='order_line']/tree//field[@name='discount']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>